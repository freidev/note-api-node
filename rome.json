{
	"$schema": "https://docs.rome.tools/schemas/12.1.3/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"formatter": {
		"indentStyle": "tab",
		"indentSize": 2,
		"lineWidth": 80,
		"ignore": ["build", "node_modules"]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		},
		"ignore": ["build", "node_modules"]
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single"
		}
	}
}
